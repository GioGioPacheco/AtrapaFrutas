//Valores cuadrado
int x = 0;
int y = 678;
int anchoCuadrado = 250;
int altoCuadrado = 40;
int vel = 5;

//valoresfrutas

float posX[];
float posY[];
float distancia ;
int puntaje = 0;
float velocidad = random(1, 5);
int estado[];
PImage img;



void setup(){
  size(800,800);
  posX = new float[800];
  posY = new float[100];
  img = loadImage("Fruta.png");
  estado = new int[100];
  for(int i=0; i<100; i++){
    posX[i]=random(800);
    posY[i]=random(250);
    estado[i]= 1;
  }
  
}

void draw(){
    background(#0F89FF);
     puntaje=0;


  //canasta
  fill(#CA9E67);
  stroke(1);
  rect(x,y,anchoCuadrado,altoCuadrado);
 tecladointeraccion();
 
 //frutas
 fill(#A32ABC);
  for(int i=0; i<100; i++){
    posY[i] = posY[i]+velocidad;
    if(estado[i]==1){
      ellipse(posX[i],posY[i],20,20);
     // img = loadImage(posX[i],posY[i]);
    }
    else{
      puntaje = puntaje+1;
    }
  }
  //puntajeinf
  fill(0);
  text("Puntaje:"+puntaje,30,30 );
 
}
 void tecladointeraccion(){
   if(keyPressed == true){
     if( key == 'a' ){
       x = x-= 10;}
     if( key == 'd'){
       x = x+=10;}
     for(int i=0; i<100; i++){
     if(key == 'e'){
       distancia = dist(x,y,posX[i],posY[i]);
        if(distancia<20){
        estado[i]=0;
      }
     }
     }   
       
       
     }  
 }
 
